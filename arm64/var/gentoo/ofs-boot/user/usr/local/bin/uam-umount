#!/bin/bash

[ ! -d "$1" ] && exit 1

V="$(echo $1 | sed s/\\/$//)"

DEV=$(cat /etc/mtab | grep "/run/uam" | grep "$V" | cut -d ' ' -f 1)
MP=$(cat /etc/mtab | grep "$DEV" | cut -d ' ' -f 2)

if [ "$DEV" == "" ] ; then
    echo "Device not found in /run/uam..."
    exit 1
fi

echo "$DEV $MP"

/bin/umount "$DEV" && rm -r -f "$MP"
